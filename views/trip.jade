extends layout
block scripts
	script(src="/js/trip.js")
block content
	div.container(style="min-height:800px;")
		div#trip_id(style="display:none") #{trip.trip_id}
		div.row
			div.col-md-12
				h2 #{trip.name}
				div.row
					div.col-md-12
						p
							span.glyphicon.glyphicon-calendar
							span &nbsp;#{trip.start.toDateString ? trip.start.toDateString() : trip.start} - #{trip.end.toDateString ? trip.end.toDateString() : trip.end}&nbsp;&nbsp;&nbsp;
							span.glyphicon.glyphicon-eye-open
							span &nbsp;#{trip.privacy === 0 ? "Public": "Limited"}
						div.pull-right
							- if (trip.owner === user.uid ) {
								a.btn.btn-danger Delete Trip
							- }
						blockquote #{trip.description}
				div.row
					div.col-md-8
						div.row
							div.col-md-12
								h2 Schedule
								div#schedule
								- if (trip.owner === user.uid ) {
									div#schedule-add
										a.btn.btn-default Add new schedule item
								- }
						div.row
							div.col-md-12
								h2 Albums
								div#albums
						div.row
							div.col-md-6
								h3 Ratings
								div#ratings
							div.col-md-6
								h3 Checklist
								div#checklist

					div.col-md-4
						div.row
							div.col-md-12
								- if (trip.owner === user.uid ) {
									div#requests
								- } else {
									a#join-btn.btn.btn-success.btn-block Join Trip
								- }
						div.row
							div.col-md-12
								h3 Members
								div#members



