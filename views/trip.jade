extends layout
block scripts
	script(src="/js/trip.js")
block content
	div.container(style="min-height:800px;")
		div#trip_id(style="display:none") #{trip.trip_id}
		div.row
			div.col-md-12
				h2 #{trip.name}
				div.row
					div.col-md-12
						p
							span.glyphicon.glyphicon-calendar
							span &nbsp;#{trip.start.toDateString()} - #{trip.end.toDateString()}&nbsp;&nbsp;&nbsp;
							span.glyphicon.glyphicon-eye-open
							span &nbsp;#{trip.privacy === 0 ? "Public": "Limited"}
						blockquote #{trip.description}
				div.row
					div.col-md-8
						div.row
							div.col-md-12
								h2 Schedule
								div#schedule
						div.row
							div.col-md-6
								h3 Ratings
							div.col-md-6
								h3 Checklist
								div#checklist

					div.col-md-4
						div.row
							div.col-md-12
								- if (trip.owner === user.uid ) {
									div#requests
								- } else {
									a.btn.btn-primary Join Trip
								- }
						div.row
							div.col-md-12
								h3 Members
								div#members



